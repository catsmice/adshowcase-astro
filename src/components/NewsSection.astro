<div id="modal" class="hidden fixed inset-0 z-50 bg-black bg-opacity-50 flex justify-center items-center overflow-y-auto">
    <div class="bg-white rounded-lg shadow-xl max-w-4xl m-2">
        <!-- Removed duplicate "bg-white rounded-lg shadow-xl max-w-4xl" here since it's already applied to the parent div -->
        <div class="sticky rounded-lg top-0 z-50 bg-white flex justify-end border-b p-3 text-lg font-semibold">
            <button id="closeModal" class="text-gray-600 focus:outline-none flex items-center">
                <span class="material-symbols-outlined" style="margin-bottom: -5px;">close</span> 關閉
            </button>
        </div>
        <div class="p-6 modal-body">
            <div class="flex flex-col lg:flex-row">
                <div class="flex justify-center w-full lg:w-1/2 mb-4">
                    <img id="modalImg" src="" alt="Animated GIF" class="rounded-lg"/>
                </div>
                <div class="flex flex-col justify-center w-full lg:w-1/2 lg:pl-6">
                    <h2 id="modalTitle" class="text-2xl font-semibold mb-6"></h2>
                    <p id="modalDescription" class="text-gray-700 mb-4"></p>
                    <div class="mb-4">
                        <span class="text-black-600">支援裝置類型</span>
                        <span id="modalDevice" class="bg-purple-200 text-purple-600 rounded-full px-5 py-1 text-sm font-semibold mr-2 mb-2"></span>
                    </div>
                    <div class="flex justify-center mb-4">
                        <img id="barcodeImg" width="120" height="120" src="" class="rounded-lg"/>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        var imageLinks = document.querySelectorAll('.image-link');
        var modal = document.getElementById('modal');
        var body = document.body;

        var modalImg = document.getElementById('modalImg');
        var modalTitle = document.getElementById('modalTitle');
        var modalDescription = document.getElementById('modalDescription');
        var modalDevice = document.getElementById('modalDevice');
        //var modalDesktop = document.getElementById('modalDesktop');
        var barcodeImg = document.getElementById('barcodeImg');
        var closeModal = document.getElementById('closeModal');

        imageLinks.forEach(function(link) {
            link.addEventListener('click', function(event) {
                event.preventDefault();
                modalImg.src = link.getAttribute('data-modal-img');
                modalTitle.textContent = link.getAttribute('data-modal-title');
                modalDescription.textContent = link.getAttribute('data-modal-description');
                modalDevice.textContent = link.getAttribute('data-modal-device');
                //modalDesktop.textContent = link.getAttribute('data-modal-desktop');
                barcodeImg.src = link.getAttribute('data-barcode-img');
                modal.classList.remove('hidden');
                body.classList.add('body-noscroll'); // Prevent background scrolling
            });
        });

        closeModal.addEventListener('click', function() {
            modal.classList.add('hidden');
            body.classList.remove('body-noscroll'); // Re-enable background scrolling

        });
    });
</script>

