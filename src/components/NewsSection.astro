        align-items: center;
        display: flex;
    }

    .modal-body {
        max-height: 80vh; /* Adjust based on your needs */
        overflow-y: auto; /* Enable scrolling */
    }

    .body-noscroll {
        overflow: hidden;
        height: 100vh;
        width: 100vw;
        position: fixed;
    }

    @keyframes fadeIn {
        from { opacity: 0; }
        to { opacity: 1; }
    }
</style>

