   <div id="modal" class="hidden fixed inset-0 bg-black bg-opacity-50 flex justify-center items-center">
    <div class="bg-white p-4 rounded-lg relative">
        <button id="closeModal" class="absolute top-0 right-0 m-2 text-black bg-transparent hover:bg-gray-200 rounded">
            X
        </button>
        <img id="modalImg" src="" alt="Animated GIF" class="rounded-lg"/>
    </div>
   </div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        var imageLinks = document.querySelectorAll('.image-button');
        var modal = document.getElementById('modal');
        var modalImg = document.getElementById('modalImg');
        var closeModal = document.getElementById('closeModal');

        imageLinks.forEach(function(link) {
            link.parentElement.addEventListener('click', function(event) {
                event.preventDefault();
                var gifUrl = event.currentTarget.getAttribute('href'); // Get the href attribute
                modalImg.src = gifUrl; // Set the src of the modal image to the href
                modal.classList.remove('hidden'); // Show the modal
            });
        });

        // Close the modal when clicked
        modal.addEventListener('click', function() {
            modal.classList.add('hidden');
            modalImg.src = ''; // Reset the src of the modal image
        });

        // Close modal when the close button is clicked
        closeModal.addEventListener('click', function() {
            modal.classList.add('hidden');
            modalImg.src = ''; // Reset the src of the modal image
        });
    });
</script>


