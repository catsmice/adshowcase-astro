            <picture>
               <source srcset="/images/layout/logo.webp" type="image/webp">
               <img src="/images/layout/logo.png" alt="multiFORCE"  class="h-9 object-contain">
            </picture>
         </div>
      </a>

      <!-- Mobile navigation -->
      <MobileNav dropdownMenus={dropdownMenus} client:load />

      <!-- Desktop navigation -->
      <nav class="hidden fixed right-0 top-0 hidden h-screen w-64 translate-x-full flex-col justify-start overflow-y-scroll bg-black bg-opacity-65 text-white lg:static lg:ml-10 lg:h-auto lg:w-auto lg:translate-x-0 lg:flex lg:flex-row lg:justify-center lg:overflow-visible lg:bg-transparent lg:text-black"> 
